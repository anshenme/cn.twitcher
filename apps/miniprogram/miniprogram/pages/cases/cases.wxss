.swiper-container {
    width: 100%;
    height: 450rpx;
}

.swiper-container swiper,swiper image {
    width: 100%;
    height: 100%;
    margin: 0rpx;
    margin-top: 0rpx;
    margin-bottom: 0rpx;
    border-radius: 20px;
}

navigator {
    width: 100%;
}

.zhibao-btn {
    margin-top: 30px;
    margin-left: 30px;
    margin-right: 30px;
    width: 80%;
    height: 100rpx;
    color: #f6f6f6;
    font-size: 36rpx;
    text-align: center;
    line-height: 100rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.content-container {
    margin-top: 5px;
    width: 100%;
    margin-bottom: 0rpx;
}

.items-container {
    background-color: #fff;
    width: 100%;
    margin-bottom: 15px;
}

.title-container {
    height: 80rpx;
    line-height: 80rpx;
}

.title {
    float: left;
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-left: 15px;
}

.more {
    float: right;
    font-size: 11px;
    color: #999;
    margin-right: 15px;
}

.item-container {
}

.item {
    display: inline-block;
    width: 100%;
    background: #fff;
    margin-bottom: 5px;
}

.item view {
    margin-right: 10px;
    margin-bottom: 10px;
    display: flex;
    flex-direction: column;
}

.item view image {
    width: 100%;
    height: 300rpx;
    background: white;
}

.item view .mainTitle {
    font-size: 17px;
    height: 20px;
    color: #333;
    margin-top: 10px;
}

.item view .detailTitle {
    font-size: 13px;
    color: #808080;
    margin-top: 10px;
    margin-bottom: 15px;
    height: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
}