@import "../../phone/phone-template.wxss";

.course_box {
    margin-top: 15px;
    background-color: #fff;
    width: 100%;
    padding-bottom: 10rpx;
    margin-bottom: 80rpx;
}

.course_item {
    display: inline-block;
    width: 48%;
    margin: 0 1%;
    margin-top: 20rpx;
    position: relative;
    overflow: hidden;
}

.course_item image {
    width: 100%;
    height: 260rpx;
}

.name {
    font-size: 12px;
    color: #333;
    margin-right: 15rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}