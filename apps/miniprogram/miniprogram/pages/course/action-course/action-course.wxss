@import "../../phone/phone-template.wxss";

.swiper-container {
    width: 100%;
    height: 450rpx;
}

.swiper-container swiper,swiper image {
    width: 100%;
    height: 100%;
}

.course-container {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.course_bar {
    border-bottom: solid 1px #f4f4f4;
    flex: none;
    display: flex;
    position: relative;
}

.course_bar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 50px;
    color: #B5B5B5;
}

.course_bar .item.active {
    color: #4292DE;
}

.course_bar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #4292DE;
}

.course_box {
    background-color: #fff;
    width: 100%;
    padding-bottom: 10rpx;
    margin-bottom: 80rpx;
}

.course_item {
    display: inline-block;
    width: 48%;
    margin: 0 1%;
    margin-top: 10rpx;
    position: relative;
}

.course_item image {
    width: 100%;
    height: 260rpx;
}

.text-container {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 260rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(0,0,0,.3);
    overflow: hidden;
}

.course-subject {
    margin-bottom: 10rpx;
    margin-top: 70rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 14px;
    color: fff;
    width: 90%;
    text-align: center;
}

.course-name {
    font-size: 12px;
    color: fff;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 90%;
    text-align: center;
}