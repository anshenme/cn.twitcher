<import src="../../phone/phone-template.wxml"></import>
<view class="container">
    <view class="swiper-container">
        <swiper autoplay="true" catchtap="onSwiperTap" circular="true" indicatorDots="true" interval="5000" wx:if="{{bannerUrls==null}}">
            <swiper-item>
                <image src="https://7265-release-dd7a37-1257811066.tcb.qcloud.la/image/course/img_banner_1.png?sign=9d353195e03aaac7ccd2743df28d05d9&t=1540616605"></image>
            </swiper-item>
        </swiper>
        <swiper autoplay="true" catchtap="onSwiperTap" circular="true" indicatorDots="true" interval="5000" wx:else>
            <swiper-item wx:for="{{bannerUrls}}" wx:key="item">
                <image src="{{item}}"></image>
            </swiper-item>
        </swiper>
    </view>
    <view class="item">
        <view class="label" style="margin-left:20rpx;">{{name}}</view>
    </view>
    <view style="background-color:#fff;height:100%;width:100%;margin-top:20rpx;">
        <text class="text-content" style="display:-webkit-box;overflow:hidden;text-overflow:ellipsis;word-break:break-all;-webkit-box-orient:vertical;">地址：{{address}}</text>
        <text class="text-content" style="display:-webkit-box;overflow:hidden;text-overflow:ellipsis;word-break:break-all;-webkit-box-orient:vertical;">时间：{{time}}</text>
        <text class="text-content" style="display:-webkit-box;overflow:hidden;text-overflow:ellipsis;word-break:break-all;-webkit-box-orient:vertical;">门票：{{ticket}}</text>
    </view>
    <map showLocation id="map" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" scale="16" style="width: 100%; height: 150px;"></map>
    <view style="background-color:#fff;height:100%;width:100%;margin-top:20rpx;">
        <text class="text-content" style="display:-webkit-box;overflow:hidden;text-overflow:ellipsis;word-break:break-all;-webkit-box-orient:vertical;">{{desc}}</text>
    </view>
    <view class="item" style="margin-top:20rpx;">
        <view class="label" style="margin-left:20rpx;">推荐</view>
    </view>
    <view class="course_box">
        <view class="course_list" style="margin-left:20rpx;margin-right:20rpx;">
            <view catchtap="tapItem" class="course_item" id="{{item.courseid}}" wx:for="{{courseList}}" wx:key="id">
                <image src="{{item.imgurl}}"></image>
                <text class="title">{{item.coursename}}</text>
            </view>
        </view>
    </view>
</view>
<template is="phoneTemplate" data></template>
