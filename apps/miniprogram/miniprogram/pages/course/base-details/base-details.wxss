@import "../../phone/phone-template.wxss";

.swiper-container {
    width: 100%;
    height: 450rpx;
}

.swiper-container swiper,swiper image {
    width: 100%;
    height: 100%;
}

.text-content {
    color: #333;
    font-size: 18px;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.item {
    height: 80rpx;
    width: 100%;
    display: flex;
    align-items: center;
    background-color: #fff;
}

.item .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.item .label {
    flex: 1;
    font-size: 20px;
    font-weight: bold;
}

.course_box {
    padding: 0 10rpx;
    background-color: #fff;
    width: 100%;
    padding-bottom: 10rpx;
    margin-bottom: 80rpx;
}

.course_item {
    display: inline-block;
    width: 48%;
    margin: 0 1%;
    margin-top: 10rpx;
    overflow: hidden;
}

.course_item image {
    width: 100%;
    height: 130px;
}

.course_box .course_list .title {
    font-size: 17px;
    margin-left: 15rpx;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
}

.page-section-gap {
    box-sizing: border-box;
    padding: 0 30rpx;
}