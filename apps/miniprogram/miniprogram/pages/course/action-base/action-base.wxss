@import "../../phone/phone-template.wxss";

.swiper-container {
    width: 100%;
    height: 450rpx;
}

.swiper-container swiper,swiper image {
    width: 100%;
    height: 100%;
}

.course-container {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.course_bar {
    border-bottom: solid 1px #f4f4f4;
    flex: none;
    display: flex;
    position: relative;
}

.course_bar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 50px;
    color: #B5B5B5;
}

.course_bar .item.active {
    color: #4292DE;
}

.course_bar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #4292DE;
}

.course_box {
    background-color: #fff;
    width: 100%;
    padding-bottom: 10rpx;
    margin-bottom: 80rpx;
}

.course_item {
    display: inline-block;
    width: 48%;
    margin: 0 1%;
    margin-top: 10rpx;
    position: relative;
}

.course_item image {
    width: 100%;
    height: 260rpx;
}

.text-container {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 260rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(0,0,0,.3);
    overflow: hidden;
}

.base-name {
    margin: 20rpx;
    margin-top: 105rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 16px;
    color: fff;
    width: 80%;
    text-align: center;
}

.course_box .course_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    margin-left: 8rpx;
    margin-right: 8rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.course_box .course_list .departure {
    font-size: 12px;
    text-align: center;
    margin-left: 20rpx;
    color: #8E8E8E;
}

.weui-loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    animation: weuiLoading 1s steps(12,end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.weui-loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
}